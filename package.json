{
  "name": "la-liga-monorepo",
  "private": true,
  "version": "0.1.0",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev:api": "tsx apps/api/src/index.ts",
    "dev:web": "next dev apps/web -p 3000 -H 0.0.0.0",
    "dev": "concurrently \"npm run dev:api\" \"npm run dev:web\"",
    "build:api": "tsc -p apps/api/tsconfig.json && npm run postbuild:api",
    "build:web": "next build apps/web",
    "start:api": "node -r tsconfig-paths/register dist/apps/api/apps/api/src/index.js",
    "postbuild:api": "node -e \"const fs=require('fs');const path=require('path');const src=path.join('apps','api','src','data','players.min.json');const dest=path.join('dist','apps','api','src','data');fs.mkdirSync(dest,{recursive:true});fs.copyFileSync(src,path.join(dest,'players.min.json'));\"",
    "start:web": "next start apps/web -H 0.0.0.0 -p 3000",
    "lint": "eslint . --ext .ts,.tsx",
    "format": "prettier --write \"**/*.{js,ts,tsx,json,md}\"",
    "prisma:migrate": "prisma migrate dev",
    "prisma:generate": "prisma generate",
    "seed:clubs": "ts-node prisma/seed/clubs.ts",
    "seed:players": "ts-node prisma/seed/players.ts"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/cors": "^2.8.17",
    "@types/node": "^22.9.4",
    "@types/react": "^18.3.12",
    "@types/react-dom": "^18.3.1",
    "concurrently": "^9.1.0",
    "eslint": "^9.14.0",
    "eslint-config-next": "^15.1.2",
    "prisma": "^5.22.0",
    "prettier": "^3.3.3",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "tsconfig-paths": "^4.2.0",
    "tsx": "^4.19.1",
    "typescript": "^5.7.2"
  },
  "dependencies": {
    "@prisma/client": "^5.22.0",
    "cors": "^2.8.5",
    "express": "^4.21.1",
    "helmet": "^8.0.0",
    "csv-parser": "^3.2.0",
    "next": "^15.1.2",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "zod": "^3.23.8"
  }
}
